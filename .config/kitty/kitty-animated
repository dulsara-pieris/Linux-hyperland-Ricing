#!/bin/bash

# Start kitty with low opacity
kitty --single-instance --override background_opacity=0.25 &
PID=$!

# Wait for the socket to become available
sleep 0.25

# Fade-in animation
for op in 0.25 0.40 0.55 0.70 0.82 0.90 0.95; do
    kitty @ set-background-opacity $op
    sleep 0.06
done

wait $PID
